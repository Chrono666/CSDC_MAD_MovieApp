<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_wide"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_wide"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/margin_wide"
        android:contentDescription="@string/image_content_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gambit" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="363dp"
        android:layout_height="471dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_view_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/movie_title"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/genre_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genre_tag_1"
                android:textColor="@color/important_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/genre_tag_2"
                app:layout_constraintEnd_toStartOf="@+id/genre_tag_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/genre_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/genre_tag_2"
                android:textColor="@color/important_text"
                app:layout_constraintEnd_toStartOf="@+id/ratingBar3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/genre_tag_1"
                app:layout_constraintTop_toBottomOf="@+id/movie_title" />

            <RatingBar
                android:id="@+id/ratingBar3"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/genre_tag_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/genre_tag_2"
                app:layout_constraintTop_toTopOf="@+id/genre_tag_2" />

            <TextView
                android:id="@+id/creators_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creators_info_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/creator_tag_1"
                app:layout_constraintEnd_toStartOf="@+id/creator_tag_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/actor_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actors_info_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/actor_tag_1"
                app:layout_constraintEnd_toStartOf="@+id/actor_tag_1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/story_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:text="@string/story_info_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actor_tag_1" />

            <TextView
                android:id="@+id/story_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/story_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/story_info_text" />

            <TextView
                android:id="@+id/creator_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:text="@string/creator_tag_1"
                android:textColor="@color/important_text"
                app:layout_constraintEnd_toStartOf="@+id/creator_tag_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/creators_info_text"
                app:layout_constraintTop_toBottomOf="@+id/genre_tag_2" />

            <TextView
                android:id="@+id/creator_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="@string/creator_tag_2"
                android:textColor="@color/important_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/creator_tag_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/creator_tag_1" />

            <TextView
                android:id="@+id/actor_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:text="@string/actor_tag_1"
                android:textColor="@color/important_text"
                app:layout_constraintEnd_toStartOf="@+id/actor_tag_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/actor_info_text"
                app:layout_constraintTop_toBottomOf="@+id/creator_tag_1" />

            <TextView
                android:id="@+id/actor_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="@string/actor_tag_2"
                android:textColor="@color/important_text"
                app:layout_constraintBaseline_toBaselineOf="@+id/actor_tag_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/actor_tag_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/fab_content_description"
        android:focusable="true"
        app:backgroundTint="@color/important_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>